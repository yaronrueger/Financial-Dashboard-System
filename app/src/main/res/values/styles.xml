<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Floating" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/floating_background</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Searching" parent="Widget.AppCompat.Button">
        <item name="android:foreground">@drawable/searching_background</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="navappbar">
        <item name="android:foreground">@drawable/navappbar_background</item>
    </style>

    <style name="FloatingRefresh">
        <item name="android:foreground">@drawable/floatingrefresh_background</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomNavigationStyle">
        <item name="iconTint">@drawable/bottom_navigation_bar_icon_color</item>
    </style>
    <style name="Theme.App" parent="Platform.MaterialComponents.Light">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">#00FFFFFF</item>
        <item name="colorOnPrimary">#00FFFFFF</item>
    </style>
    <style name="Theme.App2" parent="Platform.MaterialComponents">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">#00FFFFFF</item>
        <item name="colorOnPrimary">#00FFFFFF</item>
    </style>
</resources>
